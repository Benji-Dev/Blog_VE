
{% extends 'base.html.twig' %}

{% block title %}Les articles{% endblock %}

{% block body %}
<header>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <div class="container-fluid">
      <button
              class="navbar-toggler"
              type="button"
              data-mdb-toggle="collapse"
              data-mdb-target="#navbarExample01"
              aria-controls="navbarExample01"
              aria-expanded="false"
              aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarExample01">
        <ul class="nav justify-content-end">
        <li class="nav-item">
                <a class="nav-link active" href="{{ path('article_index') }}">Les articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="{{ path('article_new') }}">Créer un article</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('author_index') }}">Les auteurs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('category_index') }}">Les catégories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('news_index') }}">Les news</a>
            </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Navbar -->

  <!-- Background image -->
  <div
          class="p-5 text-center bg-image"
          style="
          background-image: url('https://assets-eu-01.kc-usercontent.com/bb5aba31-d98c-0160-8548-418b3723c58e/bf7b2d4f-58e2-4332-9d90-2a730df8e024/Volkswagen%20ID3%20(12)%20HERO.jpg?width=1750&fm=jpg&auto=format');
          height: 350px;
          background-repeat:no-repeat;
        "
  >
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
      <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-white">
          <h1 class="mb-3">Le blog des voitures électriques</h1>
        </div>
      </div>
    </div>
  </div>
  <!-- Background image -->
</header>
    <h2>Retrouver ici des articles pour vous aider</h2>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    

    {% for article in articles %}
      <div class="card" style="width: 20rem;">
        <img src="https://eiver.co/wp-content/uploads/2021/03/ve%CC%81hicule-e%CC%81lectrique-batterie.jpeg" class="card-img-top" alt="...">
        <div class="card-body">
        <h5 class="card-title">{{ article.title }}</h5>
        <p class="card-text">{{ article.description }}</p>
        <p>{{ article.date ? article.date|date('Y-m-d') : '' }}</p>
        <a class="btn btn-outline-info" href="{{ path('article_show', {'id': article.id}) }}">Lire</a>
        <a class="btn btn-outline-info" href="{{ path('article_edit', {'id': article.id}) }}">modifier</a>
      </div>
</div>
{% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}

        

<style>
h2 {
  color: black;
  font-size: 1.5em;
  text-align: center;
  margin-top: 15px
}

.card {
  float: left;
  margin-left: 8%;
  margin-top: 5%;
}

</style>

{% endblock %}
